<% title "Works" %>

<table>
  <tr>
    <th>Name</th>
    <th>Updated</th>
  </tr>
  <% for work in @works %>
    <tr>
      <td><%= work.name %></td>
      <td><%= time_ago_in_words(work.updated_at) %> ago</td>
      <td><%= link_to "Show", author_work_path(@author, work) %></td>
      <td><%= link_to "Edit", edit_author_work_path(@author, work) %></td>
      <td><%= link_to "Destroy", author_work_path(@author, work), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Work", new_author_work_path %></p>
